# ===========================================
# LectureLens Environment Configuration
# ===========================================
# Copy this file to .env and fill in the values

# ===========================================
# External API Keys (Required)
# ===========================================
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here
OPENROUTER_API_KEY=your_openrouter_api_key_here

# ===========================================
# Database Configuration
# ===========================================
POSTGRES_USER=lecturelens
POSTGRES_PASSWORD=lecturelens_dev
POSTGRES_DB=lecturelens
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
DATABASE_URL=postgresql+asyncpg://lecturelens:lecturelens_dev@localhost:5432/lecturelens

# ===========================================
# Chroma Vector Database
# ===========================================
CHROMA_HOST=localhost
CHROMA_PORT=8000

# ===========================================
# Application Settings
# ===========================================
DEBUG=true
LOG_LEVEL=INFO
SECRET_KEY=your-secret-key-change-in-production

# CORS Configuration (comma-separated origins)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# ===========================================
# Model Configuration
# ===========================================
# Real-time queries (fast)
EMBEDDING_MODEL_REALTIME=openai/text-embedding-3-small
# Document indexing (quality)
EMBEDDING_MODEL_INDEXING=openai/text-embedding-3-large
# LLM for note generation and query enrichment
LLM_MODEL=anthropic/claude-3-haiku-20240307
# Fallback LLM
LLM_MODEL_FALLBACK=openai/gpt-4o-mini

# ===========================================
# ElevenLabs Configuration
# ===========================================
ELEVENLABS_VOICE_ID=21m00Tcm4TlvDq8ikWAM
ELEVENLABS_MODEL_ID=eleven_turbo_v2_5

# ===========================================
# File Storage
# ===========================================
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE_MB=50
